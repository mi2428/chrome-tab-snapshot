{
    "manifest_version": 2,
    "name": "mi2428.link",
    "version": "0.5",
    "description": "ウィンドウ状態のスナップショット作成",
    "browser_action": {
        "default_icon": "icon/icon.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
      "scripts": [
        "js/lib/jquery.min.js",
        "js/background.js"
      ],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": [
          "https://mi2428.net/pools/*",
          "http://localhost:4567/pools/*"
        ],
        "js": [
          "js/lib/jquery.min.js",
          "js/content.js"
        ]
      },
      {
        "matches": [
          "https://mi2428.net/pools/*/snapshots*",
          "http://localhost:4567/pools/*/snapshots*"
        ],
        "js": [
          "js/lib/jquery.min.js",
          "js/restore.js"
        ]
      }
    ],
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "https://mi2428.link/pools/*",
        "http://localhost:4567/pools/*"
    ],
    "icons": {
        "128": "icon/icon.png"
    }
}
