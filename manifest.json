{
    "manifest_version": 2,
    "name": "Simple Tab Snapshot",
    "version": "0.5",
    "description": "mi2428.link用Chrrome拡張",
    "browser_action": {
        "default_icon": "icon/icon.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_scripts": [
      {
        "matches": [
          "https://mi2428.net/pools/*",
          "http://localhost:4567/pools/*"
        ],
        "js": [
          "js/lib/jquery.min.js",
          "js/pool_action.js"
        ]
      }
    ],
    "permissions": [
        "tabs",
        "storage",
        "https://mi2428.link/pools/*",
        "http://localhost:4567/pools/*"
    ],
    "icons": {
        "128": "icon/icon.png"
    }
}
